<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".controller.activity.ChengePwdActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:gravity="center"

        android:id="@+id/top"
        android:textSize="40sp"
        android:textColor="@color/grey"
        android:layout_centerInParent="true"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView

            android:layout_width="400dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:id="@+id/edit_account"

            android:drawableLeft="@android:drawable/ic_menu_myplaces"


            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="100dp"
          />
        <EditText
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_pwd"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:hint="请输入您的密码"
            android:layout_below="@+id/edit_account"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_pwd1"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:hint="请确认您的密码"
            android:layout_below="@+id/edit_pwd"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:id="@+id/btn_chengepwd"
            android:onClick="finish_login"
            android:background="@drawable/yuanjiao"
            android:textSize="20dp"

            android:textColor="@color/grey"
            android:layout_below="@+id/edit_pwd"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="100dp" />

</RelativeLayout>



    </LinearLayout>


